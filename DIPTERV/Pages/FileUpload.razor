@page "/fileupload"
@using DIPTERV.Context;
@using DIPTERV.Data
@using DIPTERV.Services;
@using Microsoft.EntityFrameworkCore

@inject GeneticAlgorithmService excelService

<PageTitle>File Upload</PageTitle>

<RadzenCard Style="width: 320px">
    <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Tantárgyfelosztás feltöltése</RadzenText>
    <InputFile OnChange="@UploadFileAsync" />
</RadzenCard>

@code {

    private async void UploadFileAsync(InputFileChangeEventArgs e)
    {
        await excelService.ImportExcelFileAsync(e);
    }

  

}
